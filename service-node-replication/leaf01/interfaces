
auto lo
iface lo inet loopback
    address 10.0.0.11/32
    vxrd-src-ip 10.0.0.11
    vxrd-svcnode-ip 10.0.0.200

auto eth0
iface eth0 inet dhcp


# uplinks
auto swp51
iface swp51

auto swp52
iface swp52


# vxlan aware bridge
auto swp1
iface swp1
  bridge-access 100

auto vni-1000
iface vni-1000
  vxlan-id 1000
  bridge-access 100
  vxlan-local-tunnelip 10.0.0.11
  vxlan-svcnodeip 10.0.0.200
  mstpctl-bpduguard yes
  mstpctl-portbpdufilter yes

auto bridge
iface bridge
  bridge-ports swp1 vni-1000
  bridge-stp on
  bridge-vlan-aware yes
  bridge-vids 100
  bridge-pvid 1
